<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="app2.app2.controller.View1" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<Panel xmlns="sap.m" width="auto" expandable="true" expanded="true" id="panel0" expand="mainPanelExpanded">
							<headerToolbar>
								<Toolbar id="toolbar1">
									<Title text="Main panel in app 2"/>
									<ToolbarSpacer/>
									<Button icon="sap-icon://settings"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<CheckBox xmlns="sap.m" text="check me" selected="false" id="box0" select="checkBoxSelected"/>
							</content>
						</Panel>
						<VBox width="100%" direction="Column" id="vbox0"/>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>